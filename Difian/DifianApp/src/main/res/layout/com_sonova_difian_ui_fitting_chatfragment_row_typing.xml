<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="72dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/chat_bubble_audiologist_typing">

            <!--suppress AndroidLintHardcodedText -->
            <TextView
                android:id="@+id/com_sonova_difian_ui_fitting_chatfragment_row_messagetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/com_sonova_difian_ui_fitting_chatfragment_typing"
                android:autoLink="all"
                android:textColor="@android:color/secondary_text_dark_nodisable"/>

            <!--suppress AndroidLintContentDescription -->
            <ImageView
                android:id="@+id/com_sonova_difian_ui_fitting_chatfragment_row_messageimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/fragmentbackground"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
